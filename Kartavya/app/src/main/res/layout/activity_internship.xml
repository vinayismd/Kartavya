<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="vinayism.kartavya.Internship">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name :"
                android:id="@+id/tvintrnname"
                android:layout_alignParentTop="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/etintrnname"
                android:layout_below="@+id/tvintrnname"
                android:background="@drawable/bar"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Phone Number :"
                android:layout_below="@+id/etintrnname"
                android:id="@+id/tvinternphnno"
                 />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/etinternphnno"
                android:layout_below="@+id/tvinternphnno"
                android:background="@drawable/bar"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email :"
                android:layout_below="@+id/etinternphnno"
                android:id="@+id/tvinternemail"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/etinternemail"
                android:layout_below="@+id/tvinternemail"
                android:background="@drawable/bar"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="What Do You Know About Kartavya?"
                android:layout_below="@+id/etinternemail"
                android:id="@+id/tvinternknow"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="top"
                android:hint="max 80 words"
                android:id="@+id/etinternknow"
                android:layout_below="@+id/tvinternknow"
                android:background="@drawable/bar"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="What Do You Want To Join Kartavya?"
                android:layout_below="@+id/etinternknow"
                android:id="@+id/tvinternjoin"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:hint="max 80 words"
                android:gravity="top"
                android:id="@+id/etinternjoin"
                android:layout_below="@+id/tvinternjoin"
                android:background="@drawable/bar"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:gravity="center"
                android:id="@+id/btninternapply"
                android:layout_below="@+id/etinternjoin"
                />

        </RelativeLayout>
        </ScrollView>

</RelativeLayout>

